    <script>
      const images = [
        "/images/imagen1.jpg",
        "/images/imagen2.jpg",
        "/images/imagen3.jpg",
      ];
      let index = 0;

      function updateCarousel() {
        document.getElementById("carouselImage").src = images[index];
      }
      function nextSlide() {
        index = (index + 1) % images.length;
        updateCarousel();
      }
      function prevSlide() {
        index = (index - 1 + images.length) % images.length;
        updateCarousel();
      }
    </script>
